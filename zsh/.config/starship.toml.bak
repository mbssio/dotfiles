format = """
[█](fg:#8AADF4)\
$os\
$username\
[](bg:#C6A0F6 fg:#8AADF4)\
$directory\
[](fg:#C6A0F6 bg:#F5A97F)\
$git_branch\
$git_status\
[](fg:#F5A97F bg:#A6DA95)\
$c\
$elixir\
$elm\
$golang\
$gradle\
$haskell\
$java\
$julia\
$nodejs\
$nim\
$rust\
$scala\
[](fg:#A6DA95 bg:#7DC4E4)\
$docker_context\
[ ](fg:#7DC4E4)\
"""

# Disable the blank line at the start of the prompt
# add_newline = false

# You can also replace your username with a neat symbol like   or disable this
# and use the os module below
[username]
show_always = true
style_user = "bg:#8AADF4 fg:#1E2030"
style_root = "bg:#8AADF4 fg:#1E2030"
format = '[ ]($style bold)'
disabled = false

# An alternative to the username module which displays a symbol that
# represents the current operating system
[os]
style = "bg:#8AADF4 fg:#1E2030"
disabled = true # Disabled by default

[directory]
style = "bg:#C6A0F6 fg:#1E2030"
format = "[ $path ]($style bold)"
truncation_length = 3
truncation_symbol = "…/"

# Here is how you can shorten some long paths by text replacement
# similar to mapped_locations in Oh My Posh:
[directory.substitutions]
".dotfiles" = " "
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = " "
"Pictures" = " "
# Keep in mind that the order matters. For example:
# "Important Documents" = " 󰈙 "
# will not be replaced, because "Documents" was already substituted before.
# So either put "Important Documents" before "Documents" or use the substituted version:
# "Important 󰈙 " = " 󰈙 "

[c]
symbol = " "
style = "bg:#A6DA95 fg:#1E2030"
format = '[ $symbol ($version) ]($style)'

[docker_context]
symbol = " "
style = "bg:#7DC4E4 fg:#1E2030"
format = '[ $symbol $context ]($style)'

[elixir]
symbol = " "
style = "bg:#A6DA95 fg:#1E2030"
format = '[ $symbol ($version) ]($style)'

[elm]
symbol = " "
style = "bg:#A6DA95 fg:#1E2030"
format = '[ $symbol ($version) ]($style)'
#
[git_branch]
symbol = ""
style = "bg:#F5A97F fg:#1E2030"
format = '[ $symbol $branch ]($style)'

[git_status]
style = "bg:#F5A97F fg:#1E2030"
format = '[$all_status$ahead_behind ]($style)'

[golang]
symbol = " "
style = "bg:#A6DA95 fg:#1E2030"
format = '[ $symbol ($version) ]($style)'

[gradle]
style = "bg:#A6DA95 fg:#1E2030"
format = '[ $symbol ($version) ]($style)'

[haskell]
symbol = " "
style = "bg:#A6DA95 fg:#1E2030"
format = '[ $symbol ($version) ]($style)'

[java]
symbol = " "
style = "bg:#A6DA95 fg:#1E2030"
format = '[ $symbol ($version) ]($style)'

[julia]
symbol = " "
style = "bg:#A6DA95 fg:#1E2030"
format = '[ $symbol ($version) ]($style)'

[nodejs]
symbol = ""
style = "bg:#A6DA95 fg:#1E2030"
format = '[ $symbol ($version) ]($style)'

[nim]
symbol = "󰆥 "
style = "bg:#A6DA95 fg:#1E2030"
format = '[ $symbol ($version) ]($style)'

[rust]
symbol = ""
style = "bg:#A6DA95 fg:#1E2030"
format = '[ $symbol ($version) ]($style)'

[scala]
symbol = " "
style = "bg:#A6DA95 fg:#1E2030"
format = '[ $symbol ($version) ]($style)'

[time]
disabled = false
time_format = "%R" # Hour:Minute Format
style = "bg:#EED49F fg:#1E2030"
format = '[ $time ]($style)'
